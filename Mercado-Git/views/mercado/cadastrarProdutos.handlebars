<div class="container ">

    <div class="row card ">
        <div class="col card-body ">
            {{#each erros}}
            <div class="alert alert-danger mt-4">{{texto}}</div>
            {{else}}
            
            {{/each}}
            <h1 class="htext mt-5 text-center">Cadastrar Produtos</h1>
            <form action="/cadastroProdutos/novo" method="post">
                <div class="form-group">
                    <label for="nome_Produto">Nome do Produto</label>
                    <input class="form-control" onblur="validaNome(value)" type="text" id="nome_Produto" name="nome_Produto"
                        placeholder="Nome do Produto" >
                </div>
                <div class="form-group">
                    <label for="quantidade_Produto">Quantidade Produto</label>
                    <input class="form-control" onblur="validaEstoque(value)" type="number" id="quantidade_Produto"
                        name="quantidade_Produto" placeholder="Quantidade do Produto">
                </div>
                <div class="form-group">
                    <label for="valor_Produto">Valor do Produto</label>
                    <input class="form-control" onblur="validaValor(value)" type="text" id="valor_produto"
                        name="valor_produto" placeholder="Valor do Produto" >
                </div>

                <div class="form-group">
                    <label for="codbarras">Codigo de Barras</label>
                    <input class="form-control" onblur="validaValor(value)" type="text" id="codbarras" name="codbarras"
                        placeholder="Codigo de Barras">
                </div>
                
                <button class="btn btn-dark" onclick="validaBotao()" type="submit" id="enviar">Cadastrar</button>
                <a href="/produtos" class="btn btn-primary">Cancelar</a>
            </form>
        </div>

    </div>
</div>